<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
	                    http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	                    id="WebApp_ID" version="3.1">
	<display-name>ProyectoVaadinSpring3HB3</display-name>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext.xml</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>VaadinApplication</servlet-name>
		<servlet-class>com.ejemplo.vaadin.util.AutowiringApplicationServlet</servlet-class>
		<init-param>
			<param-name>application</param-name>
			<param-value>com.ejemplo.vaadin.MyApplication</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>/html/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>VaadinApplication</servlet-name>
		<url-pattern>/vaadin/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>VaadinApplication</servlet-name>
		<url-pattern>/VAADIN/*</url-pattern>
	</servlet-mapping>
	
	<context-param>
		<description>Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>
	
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	
</web-app>